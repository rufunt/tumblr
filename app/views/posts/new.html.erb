<div id="page_wrapper">
  <h3>Создать статью</h3>

  <%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit 'Сохранить' %>
    </p>
  <% end %>
</div>
